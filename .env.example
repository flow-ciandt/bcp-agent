# OpenAI API Key (required if using OpenAI provider)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (required if using Claude provider)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Flow API configuration (required if using Flow provider)
# FLOW_API_KEY=your_flow_api_key_here
# FLOW_BASE_URL=https://flow.ciandt.com/ai-orchestration-api/v1/openai
